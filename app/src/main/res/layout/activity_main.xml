<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ieee.managementqr.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title"
            android:textSize="70dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="26dp" />

        <TextView
            android:id="@+id/lb_user"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_below="@+id/title"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="62dp"
            android:layout_toLeftOf="@+id/accept"
            android:layout_toStartOf="@+id/accept"
            android:layout_weight="1"
            android:text="@string/user"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="330dp" />

        <EditText
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pass"
            android:layout_alignLeft="@+id/pass"
            android:layout_alignStart="@+id/pass"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="280dp" />

        <TextView
            android:id="@+id/lb_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/accept"
            android:layout_alignLeft="@+id/lb_user"
            android:layout_alignStart="@+id/lb_user"
            android:text="@string/lb_pass"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="338dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lb_user"
            android:layout_toEndOf="@+id/lb_user"
            android:layout_toRightOf="@+id/lb_user"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="326dp" />

        <Button
            android:id="@+id/accept"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="?attr/colorPrimary"
            android:text="@string/btn_accept"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="372dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
